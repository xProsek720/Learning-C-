<Window x:Class="ListBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListBox"
        mc:Ignorable="d"
        Title="ListBox" Height="450" Width="800">
    <Grid>
        
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="16" HorizontalAlignment="Center">Hello user!</TextBlock>
            <ListBox Height="100" Width="100" VerticalAlignment="Center">
                <ListBoxItem Content="Test"/>
                <ListBoxItem Content="Test"/>
                <ListBoxItem Content="Test"/>
            </ListBox>
            <Button Width="100" Height="25" Margin="0, 10, 0, 0" Content="Click Me!" Click="Button_Click">
            </Button>
        </StackPanel>
        
            
    </Grid>
</Window>
